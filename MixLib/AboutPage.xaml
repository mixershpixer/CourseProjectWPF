               <StackPanel Height="550">
                   <StackPanel.Background>
                       <ImageBrush ImageSource="Resources/max.jpg" Opacity="0.3" />
                   </StackPanel.Background>
                   <TextBlock Margin="354,400,0,0" FontSize="30" Foreground="#FFF2CB98" TextWrapping="Wrap" Text="This program is developed by mixershpixer"></TextBlock>
                   <TextBlock Margin="700 0 0 0" FontSize="30" Foreground="AntiqueWhite" TextWrapping="Wrap" Text="Copyright©2018"></TextBlock>
               </StackPanel>
            </StackPanel>

        </materialDesign:TransitioningContent>
    </Grid>
</UserControl>